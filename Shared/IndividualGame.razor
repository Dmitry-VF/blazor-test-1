
@if (!IsTable && Game != null)
{
    <div class="row text-center alert alert-info">
        <div class="col">
            <p> @Game.Name  </p>
            <p> @Game.Genre </p>
            <p> @Game.ReleaseDate.ToString("dd.MM.yyyy") </p>
        </div>
    </div>
    <div class="row">
        <div class="col offset-2">
            <button class="btn btn-light" @onclick="SwitchGame">
                Switch the game
            </button>
        </div>
        <div class="col">
            
        </div>
    </div>
}
else
{
    if (Game != null)
    {
    <tr>
        <td> @Game.Name </td>
        <td> @Game.Genre  </td>
        <td> @Game.ReleaseDate.ToString("dd.MM.yyy") </td>
        <td>
            @if (DisplayButtons)
            {
                <button class="btn btn-danger" @onclick="(() => DeleteGame.InvokeAsync(Game))">
                    Delete
                </button>
                
            }
        </td>
    </tr>
    }
}

@code {
    [Parameter] public Game Game { get; set; }
    [Parameter] public bool IsTable { get; set; }
    [Parameter] public bool DisplayButtons { get; set; } = false;
    [Parameter] public EventCallback<Game> DeleteGame { get; set; }
    [Parameter] public EventCallback SwitchGame { get; set; }

}
